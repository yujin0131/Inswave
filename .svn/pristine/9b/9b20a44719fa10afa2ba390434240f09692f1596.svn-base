@import url('https://fonts.googleapis.com/css2?family=Black+Han+Sans&family=Noto+Sans+KR&display=swap');

* {margin:0;padding:0;}
* html {height:1px;}
body {margin:0; padding:0; scroll:auto;}
a {text-decoration: none; color: black;}

header{
	padding:12px 0;
	border-bottom: 1px solid #eeeeee;
	z-index: 99999;
}

.header_main{
	margin:0 300px;
}

.title{
    display: flex;
    flex-direction: row;
}

.logo-img{
	width:110px;
}

.logo-text{
	padding:3px 0 0 3px;
	font-family:'Noto Sans KR', sans-serif;
	font-weight: 600;
}

.main{
	justify-content: center;
    display: flex;
    flex-direction: row;
}

.posts{
	width:740px;
	margin-right: 30px;
}

.sidebar{
	width:230px;
}

.sidebar {
	font-family:'Noto Sans KR', sans-serif;
	font-weight: 800;
}