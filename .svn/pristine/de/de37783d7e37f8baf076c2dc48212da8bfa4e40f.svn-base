@import url('https://fonts.googleapis.com/css2?family=Black+Han+Sans&family=Noto+Sans+KR&display=swap');

.inswave{
	width: 100%;
	display: flex;
	justify-content: center;
	margin: 50px 0 ;
}

a{
	 text-decoration-line: none;
	 color:black;
}

ul, li{
	list-style: none;
}

input{
	border:0; 
	border-bottom:2px solid;
	outline:none;  
	width: 100%;
	height:45px;
	font-size: 18px;
	line-height: 25px;
	border-bottom-color: #cccccc;
	padding: 12px 0 0;
	font-family:'Noto Sans KR', sans-serif;
}

input::placeholder { letter-spacing: 0; }

input[type=password]{
	letter-spacing: .27em;
}


input:focus{
	border-bottom-color: #006FDF;
}

.loginID:focus-within > .info_tip{
	display: block;
}

.inputholder:not(:placeholder-shown) + .info_tip{
  	display: block;
}

.loginFrm{
	width: 580px;
    height: 100%;
    margin: 40px auto 42px;
    padding: 0 69px;
    border: 1px solid rgba(0,0,0,.12);
    font-size: 12px;
    box-sizing: border-box;
}

.login_content{
	position: relative;
    height: 100%;
    padding: 55px 0 50px;
    box-sizing: border-box;
}


.info_tip {
    margin-top: 10px;
    color: #666;
    display: none;
}

.txt_tip {
    font-weight: 700;
    color: #e65f32;
    font-size: 12px;
}

.loginBtn{
	font-family:'Noto Sans KR', sans-serif;
	margin:0;
	border:none;
  	background-color: #006FDF;
  	color:white;
  	font-family:'Noto Sans KR', sans-serif;
	font-size: 16px;
	display: block;
    width: 100%;
    border-radius: 4px;
    font-weight: 400;
    line-height: 51px;
    margin-top: 40px;
}

.info_user{
	height:auto;
}
.link_join {
    float: left;
    font-size: 12px;
    margin: 12px 0;
    height: 18px;
}

.list_user {
    float: right;
}

.list_user li {
    float: left;
}

.list_user li:before {
    content: "";
    float: left;
    width: 1px;
    height: 10px;
    margin: 4px 10px;
    background-color: #006FDF48;
}

.info_user:after {
    display: block;
    visibility: hidden;
    height: 0;
    font-size: 0;
    clear: both;
    content: "";
}

.list_user li:first-child:before {
    content: "";
    width: 0;

}