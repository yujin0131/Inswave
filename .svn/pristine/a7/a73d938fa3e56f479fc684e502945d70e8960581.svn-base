input[type='number']::-webkit-outer-spin-button,
input[type='number']::-webkit-inner-spin-button {
	  -webkit-appearance: none;
	  margin: 0;
}

body{
	font-size: 16px;
    line-height: 1.5;
    font-family: NotoSans-Regular,AppleSDGothicNeo-Regular,"맑은 고딕",Malgun Gothic,"돋움",dotum,sans-serif;
    color: #7c7c7c;
    letter-spacing: -0.03em;
    word-wrap: break-word;
    margin: 0;
    padding: 0;
}


.inswave{
	width: 100%;
	display: flex;
	justify-content: center;
	margin: 50px 0 ;
}

article{
	position: relative;
    max-width: 580px;
    min-height: 520px;
    margin: 40px auto;
    padding: 58px 69px 139px;
    border: 1px solid #e5e5e5;
    border-radius: 2px;
    box-sizing: border-box;
}

.tit_main {
    font-size: 24px;
    line-height: 34px;
    color: #252525;
    letter-spacing: -1px;
    font-weight: normal;
}

.desc_main {
    margin-top: 15px;
    text-align: left;
    word-break: keep-all;
}

fieldset {
    min-width: 0;
    max-width: 100%;
    width: 100%;
    border: 0 none;
    margin: 0;
    padding: 0;
}

.txt_id {
    display: block;
    font-size: 12px;
    color: #000;
    font-weight: normal;
    margin-top: 40px;
}

.input_main {
    position: relative;
    padding-right: 0;
	margin: 0;
    padding: 0;
}

