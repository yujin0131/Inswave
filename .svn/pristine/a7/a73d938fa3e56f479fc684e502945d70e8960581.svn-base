.input_id, .input_name {
    width: 100%;
    height: 48px;
    border-style: solid;
    border-width: 0 0 2px 0;
    border-color: #ebebeb;
    padding: 11px 70px 8px 0;
    color: #252525;
    outline: 0;
    border-radius: 0;
    box-sizing: border-box;
    caret-color: #191919;
    text-decoration: none;
}

.box_btn {
    position: absolute;
    top: 10px;
    right: 0;
    min-width: 55px;
    text-align: right;
}

button {
    border: 0 none;
    background-color: transparent;
    cursor: pointer;
}

input{
	font-size: 16px;
    line-height: 1.5;
    font-family: NotoSans-Regular,AppleSDGothicNeo-Regular,"맑은 고딕",Malgun Gothic,"돋움",dotum,sans-serif;
    color: #7c7c7c;
    letter-spacing: -0.03em;
    word-wrap: break-word;
}


.btn_clear {
	width: 20px;
    height: 20px;
    display: inline-block;
    overflow: hidden;
    font-size: 0;
    line-height: 0;
    text-indent: -9999px;
    vertical-align: top;
    background: url('../../images/techBlog/removeBtn.png');
    background-size: cover;
}

.info_error {
    margin-top: 10px;
    color: #e65f3e;
    font-size: 13px;
}

.box_next {
	margin-top: 40px;
    overflow: hidden;
    position: absolute;
    right: 69px;
    bottom: 49px;
    left: 69px;
}

.next_btn_Id {
    display: block;
    width: 100%;
    height: 50px;
    padding: 0;
    border: 0;
    border-radius: 4px;
    font-size: 15px;
    color: #191919;
    background: rgba(0,0,0,0.06);
}